#!/usr/bin/perl

my %emojis = (
	"thinking" => "ðŸ¤”",
	"winking" => "ðŸ˜‰",
	"eyerolling" => "ðŸ™„",
	"unamused" => "ðŸ˜•",
	"grimac(ing|e)" => "ðŸ˜¬",
	"devilsmile" => "ðŸ˜ˆ",
	"laugh|rofl" => "ðŸ˜‚",
	"tada" => "ðŸŽ‰",
	"scream" => "ðŸ˜±",
);

sub usage {
	print STDERR "Usage: $0 desc\n";
	exit 2;
}

sub emit {
	print(shift(), "\n");
	exit 0;
}

usage() if @ARGV != 1;
my $desc = shift;

for my $re (keys %emojis){
	if($desc =~ /$re/ or $re =~ /$desc/){
		emit($emojis{$re});
	}
}

print STDERR "$0: emoji '$desc' not found\n";
exit 1;
