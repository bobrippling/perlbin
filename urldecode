#!/usr/bin/perl -w
use warnings;

sub usage()
{
	print "Usage: $0 [files_to_rename]\n";
	print "  If no files are given, stdin is read\n";
	exit 1;
}

%htmlh = (
	"%20"		 => " ",
	"%21"		 => "!",
	"%2c"		 => ",",
	"%c2%a7"	=> "S",
	"%d0%94"	=> "A",
	"%c3%a9"	=> "e",
	"%27"		 => "'",
	"%28"		 => "(",
	"%29"		 => ")",
	"%2F"		 => "/",
	"%3A"		 => ":",
);

sub translate($)
{
	for $k(keys %htmlh){
		if(m#$k#){
			$_[0] =~ s/$k/$htmlh{$k}/g;
		}
	}
	return $_[0]; # dup but oh well
}

if(@ARGV){
	print translate $_ for @ARGV;
}else{
	print translate $_ while <STDIN>;
}
